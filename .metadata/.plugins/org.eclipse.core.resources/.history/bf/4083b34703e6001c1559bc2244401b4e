package com.extreme.cursojava.aula13.Labs;

import java.util.Scanner;


public class Exercicio13 {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);

		System.out.println("Digite o valor que você ganha por hora: ");
		double valorHora = scan.nextDouble();
		
		System.out.println("Digite quantas horas você trabalha no mês: ");
		double horas = scan.nextDouble();
		
		double salarioBruto = valorHora * horas;
		double inss = (salarioBruto * 100 / 8);
		double sindicato = (salarioBruto * 100 / 5);
		double salarioLiquido = (salarioBruto * 100 / 11) - (salarioBruto * 100 / 8) - (salarioBruto * 100 / 5);
		
		
		System.out.println("Seu salário bruto é: " + salarioBruto + " foi descontado " + inss + " de inss ");
		System.out.println("Descontaram " + sindicato + " de sindicato ");
		System.out.println("O seu salário liquido só sobrou: " + salarioLiquido);
		
		
		
		
		
		
		

	}

}
